{% extends 'layouts/base.twig' %}
{% block title %}注册{% endblock %}
{% block bar %}
<div class="box">
    <div id="register">
        <a href="/register">注册</a>
    </div>
</div>
{% endblock %}

{% block main %}
<div class="box">
    <div class="form">
        <form id="register-form" action="/register" method="POST" accept-charset="utf-8">
            <input class="text" type="text" name="name" placeholder="用户名" value="">
            <input class="text" type="text" name="email" placeholder="邮箱" value="">
            <input class="text" type="password" name="password" placeholder="密码" value="">
            <input class="submit" type="submit" value="注册">
        </form>
    </div>
</div>
{% endblock %}
