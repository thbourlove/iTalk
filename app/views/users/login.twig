{% extends 'layouts/base.twig' %}
{% block title %}登录{% endblock %}
{% block bar %}
    <div class="box">
        <div id="register">
            <a href="/register">注册</a>
        </div>
    </div>
{% endblock %}

{% block main %}
    <div class="box">
        <div class="form">
            <form id="login-form" action="/login" method="POST" accept-charset="utf-8">
                <input type="text" class="text" name="name" placeholder="用户名" value="">
                <input type="password" class="text" name="password" placeholder="密码" value="">
                <input type="submit" class="submit" value="登录">
            </form>
        </div>
    </div>
{% endblock %}
